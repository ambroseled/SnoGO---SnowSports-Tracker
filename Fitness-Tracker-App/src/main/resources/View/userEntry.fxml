         <image>
            <Image url="@../logo.png" />
         </image>
      </ImageView>
      <GridPane prefHeight="670.0" prefWidth="1280.0" styleClass="grid-pane">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
